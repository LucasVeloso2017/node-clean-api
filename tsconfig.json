{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "rootDir": "./src",
        "rootDirs": ["./src"],
        "baseUrl": "./src",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "./node_modules/*",
        "dist"
    ]
}